<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="34dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imv_close"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:padding="16dp"
            android:src="@drawable/ic_baseline_close_24" />

        <ImageView
            android:id="@+id/imv_laptop"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imv_laptop"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:text="Bạn có chắc chắn xóa không"
            android:textColor="#2D3142"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:paddingHorizontal="10dp"
            android:text="Dữ liệu đã xóa không thể khôi phục!!!"
            android:textColor="#B4B7CC"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_ram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_price"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:paddingHorizontal="10dp"
            android:text="Dữ liệu đã xóa không thể khôi phục!!!"
            android:textColor="#B4B7CC"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_hhd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ram"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:paddingHorizontal="10dp"
            android:text="Dữ liệu đã xóa không thể khôi phục!!!"
            android:textColor="#B4B7CC"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_cpu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_hhd"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:paddingHorizontal="10dp"
            android:text="Dữ liệu đã xóa không thể khôi phục!!!"
            android:textColor="#B4B7CC"
            android:textSize="11dp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>